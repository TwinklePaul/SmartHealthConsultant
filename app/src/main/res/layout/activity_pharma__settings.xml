<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@android:style/Theme.Material.Light.NoActionBar">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
            android:id="@+id/profile_photo"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/my_toolbar"
            android:onClick="viewFeed">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

            <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="113dp"
                    android:layout_height="105dp"
                    android:layout_below="@+id/my_toolbar"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/doctor_profile"
                    android:background="@drawable/imagebg"
                    android:padding="6dp"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:layout_margin="10dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="Edit Your Info:"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="7dp"
            android:layout_marginHorizontal="16dp"
            android:layout_below="@+id/profile_photo">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp">

                <TextView
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:text="Add Hospital: "
                        android:padding="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                />

                <Spinner
                        android:id="@+id/SelectHospital"
                        android:layout_width="212dp"
                        android:layout_height="wrap_content"
                        android:theme="@style/mySpinnerItemStyle"
                        android:padding="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                />

            </TableRow>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp">

                <TextView
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:text="Add Clinic: "
                        android:padding="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                />

                <Spinner
                        android:id="@+id/SelectClinic"
                        android:layout_width="212dp"
                        android:layout_height="wrap_content"
                        android:theme="@style/mySpinnerItemStyle"
                        android:padding="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                />
            </TableRow>
        </androidx.cardview.widget.CardView>

    </TableLayout>

    <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gapComponents"
            android:layout_marginHorizontal="@dimen/medium_marginHorizontal"
            android:layout_alignParentBottom="true"
            app:cardElevation="@dimen/slim_padding"
            app:cardCornerRadius="15dp"
            android:onClick="viewFeed">


        <Button
                android:id="@+id/button_editTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbg"
                android:textColor="@android:color/white"
                android:text="Save Record"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
        />
    </androidx.cardview.widget.CardView>


    ,
</RelativeLayout>