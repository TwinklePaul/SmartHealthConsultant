<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="false"
            android:background="@color/cardbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
    >


        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
        >

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="App ID: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="7dp"
                        android:textAlignment="textStart"
                />

                <TextView
                        android:id="@+id/appId"
                        android:layout_width="238dp"
                        android:layout_height="match_parent"
                        android:text="Description: "
                        android:textSize="16sp"
                        android:padding="7dp"
                        android:textAlignment="textStart"

                />
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Dr Name: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="7dp"
                        android:textAlignment="textStart"
                />

                <TextView
                        android:id="@+id/dr_name"
                        android:layout_width="238dp"
                        android:layout_height="match_parent"
                        android:text="Description: "
                        android:textSize="16sp"
                        android:padding="7dp"
                        android:textAlignment="textStart"

                />
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Dr Cont: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="7dp"
                        android:textAlignment="textStart"
                />

                <TextView
                        android:id="@+id/dr_cont"
                        android:layout_width="208dp"
                        android:layout_height="match_parent"
                        android:text="Description: "
                        android:textSize="16sp"
                        android:padding="7dp"
                        android:textAlignment="textStart"

                />
            </TableRow>
            <!--<TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/callDoc"
                        android:src="@drawable/ic_action_call"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                />

                <ImageView
                        android:src="@drawable/ic_action_msg"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:onClick="msgDoc"
                />
            </TableRow>-->

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Patient Name: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="7dp"
                        android:textAlignment="textStart"
                />

                <TextView
                        android:id="@+id/pat_name"
                        android:layout_width="227dp"
                        android:layout_height="match_parent"
                        android:text="Description: "
                        android:textSize="16sp"
                        android:padding="7dp"
                        android:textAlignment="textStart"

                />
            </TableRow>


            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Patient Cont: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="7dp"
                        android:textAlignment="textStart"
                />

                <TextView
                        android:id="@+id/pat_cont"
                        android:layout_width="227dp"
                        android:layout_height="match_parent"
                        android:text="Description: "
                        android:textSize="16sp"
                        android:padding="7dp"
                        android:textAlignment="textStart"

                />
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Date: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="7dp"
                        android:textAlignment="textStart"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:padding="7dp"
                        android:ems="10"
                        android:id="@+id/editText_date"
                        android:hint="Click to Choose Date"
                        android:clickable="true"
                        android:onClick="date"
                />
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Time: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="7dp"
                        android:textAlignment="textStart"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:padding="7dp"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/editText_time"
                        android:hint="Click to Choose Time"
                        android:clickable="true"
                        android:onClick="time"
                />
            </TableRow>

        </TableLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>